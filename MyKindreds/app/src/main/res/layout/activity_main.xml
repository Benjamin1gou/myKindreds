<?xml version="1.0" encoding="utf-8"?>

<android.support.design.widget.CoordinatorLayout
    xmlns:android ="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/textClear"
    android:fitsSystemWindows = "true">


    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fabTextColor"
        android:onClick="voiceOn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center_horizontal"
        android:src="@android:drawable/ic_btn_speak_now"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        app:layout_anchor="@+id/linearLayout"
        app:layout_anchorGravity="bottom|right" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fabTest"
        android:onClick="testOn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center_horizontal"
        android:src="@android:drawable/ic_dialog_info"
        android:layout_marginRight="70dp"
        android:layout_marginBottom="5dp"
        app:layout_anchor="@+id/linearLayout"
        app:layout_anchorGravity="bottom|right" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/textClear"
        android:id="@+id/linearLayout">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:background="@color/textClear"
                android:textSize="25sp"
                android:id="@+id/textView" />

            <ListView
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:id="@+id/list_item"/>

        </FrameLayout>


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="150dp"
                android:layout_height="170dp"
                android:src="@drawable/akane_smail"
                android:id="@+id/character"
                android:layout_gravity="end"/>

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="70dp"
                android:id="@+id/imageView2" />

        </FrameLayout>

        <TextView
            android:id="@+id/textArea"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_weight="5"
            android:background="@color/textDefault"
            android:layout_gravity="bottom"
            android:layout_margin="10dp"
            android:padding="20dp"
            android:text=""
            android:textSize="20sp"
            android:textColor="@color/textClear"/>


    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>


